<h1><%= @place.name %></h1>

<h2>Entries</h2>
<% if @entries.any? %>
  <% @entries.each do |entry| %>
    <div>
      <h3><%= entry.title %></h3>
      <p>Posted on: <%= entry.occurred_on %></p>
      <p><%= entry.description %></p>
    </div>
  <% end %>
<% else %>
  <p>No entries yet!</p>
<% end %>

<p>
  <%= link_to "New Entry", new_entry_path(place_id: @place.id) %>
</p>

<p>
  <%= link_to "Back to All Places", places_path %>
</p>
